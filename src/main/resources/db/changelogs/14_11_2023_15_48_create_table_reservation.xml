<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.7.xsd">
    <changeSet id="5" author="amine">
        <createTable tableName="reservation">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="reservation_pkey"/>
            </column>
            <column name="start_date" type="DATE" />
            <column name="end_date" type="DATE" />
            <column name="total_price" type="DOUBLE" />

            <column name="user" type="BIGINT">
                <constraints nullable="false" references="users" referencedColumnNames="id" foreignKeyName="user_fkey"/>
            </column>

            <column name="equipment" type="BIGINT">
                <constraints nullable="false" references="equipment" referencedColumnNames="id" foreignKeyName="equipment_reservation_fkey"/>
            </column>



        </createTable>
    </changeSet>
</databaseChangeLog>
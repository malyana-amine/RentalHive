<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.7.xsd">
    <changeSet id="4" author="amine">
        <createTable tableName="equipment">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="equipment_pkey"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="price" type="double"/>
<!--            <column name="status" type="double"/>-->
            <column name="status" type="TINYINT"/>

<!--            <column name="status" type="ENUM('dispo', 'indispo')">-->
<!--                <constraints nullable="false"/>-->
<!--            </column>-->

            <column name="type" type="BIGINT">
                <constraints nullable="false" references="type" referencedColumnNames="id" foreignKeyName="type_fkey"/>
            </column>



        </createTable>
    </changeSet>
</databaseChangeLog>